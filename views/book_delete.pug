extends layout 

block content 
    h1 Book #{book.title} 
    p #{book.summary} 
    if book_instances.length>0 
        p Delete the following book instances before attempting to delete this book.
        div(style="margin-left:20px;margin-top:20px")
            h4 Book Instances 
            each instance in book_instances 
                a(href=instance.url) #{instance._id}
                p #{instance.imprint} 
    else 
        p Do you really want to Delete this book?

    form(method="POST")
        input#bookid.form-control(type="hidden" name="bookid" value=book._id)
        button.btn.btn-primary(type="submit") Delete         